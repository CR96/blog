---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
    title: string;
    description?: string;
    image?: string;
}

const props = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead { ...props } />
    </head>
    <body>
        <Header />
        <main id="content">
            <slot />
        </main>
        <Footer />
    </body>
</html>