---
import { FaTwitter, FaMastodon, FaBluesky, FaGithub, FaMedium, FaYoutube, FaRss } from 'react-icons/fa6';
import { TbRobotOff } from 'react-icons/tb';
---

<footer>
    <ul class="social-links">
        <li>
            <a href="/feed.xml">
                <FaRss title="RSS" />
            </a>
        </li>
        <li>
            <a href="https://twitter.com/coreyjrowe" target="_blank">
                <FaTwitter title="Twitter" />
            </a>
        </li>
        <li>
            <a target="_blank" rel="me" href="https://detmi.social/@coreyjrowe">
                <FaMastodon title="Mastodon" />
            </a>
        </li>
        <li>
            <a href="https://bsky.app/profile/coreyjrowe.bsky.social" target="_blank">
                <FaBluesky title="Bluesky" />
            </a>
        </li>
        <li>
            <a href="https://github.com/CR96" target="_blank">
                <FaGithub title="GitHub" />
            </a>
        </li>
        <li>
            <a href="https://medium.com/@coreyjrowe" target="_blank">
                <FaMedium title="Medium" />
            </a>
        </li>
        <li>
            <a href="https://www.youtube.com/@musicalmitten" target="_blank">
                <FaYoutube title="YouTube" />
            </a>
        </li>
    </ul>
    <div class="ai-disclosure">
        <TbRobotOff aria-label="No AI" />
        <p>All content on this blog is my own voice.</p>
    </div>
</footer>
<style>
    footer {
        text-align: center;
        padding-block: 0.75em 1em;
    }

    ul {
        list-style: none;
        margin-block: 0.25em;
        padding-left: 0;
    }

    .social-links {
        display: inline-flex;
        gap: 10px;

        a {
            font-size: 28px;
            color: light-dark(var(--zinc-500), var(--zinc-400));

            &:hover,
            &:focus {
                color: light-dark(var(--blue-700), var(--blue-500));
            }
        }
    }

    .ai-disclosure {
        display: flex;
        align-items: center;
        place-content: center;
        gap: 0.5em;
        opacity: 0.7;

        svg {
            font-size: 1.5em;
        }
    }
</style>